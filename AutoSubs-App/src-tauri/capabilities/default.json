{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.tauri.app"
        },
        {
          "url": "http://localhost:8000/transcribe/"
        },
        {
          "url": "http://localhost:*"
        }
      ],
      "deny": [
        {
          "url": "https://private.tauri.app"
        }
      ]
    },
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "/Library/Application Support/Blackmagic Design/DaVinci Resolve/Fusion/Scripts/Utility/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "/Library/Application Support/Blackmagic Design/DaVinci Resolve/Fusion/Scripts/Utility/**"
        },
        {
          "path": "$DOCUMENT/AutoSubs/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "/Library/Application Support/Blackmagic Design/DaVinci Resolve/Fusion/Scripts/Utility/**"
        }
      ]
    },
    "dialog:default",
    {
      "identifier": "dialog:allow-save",
      "allow": [
        {
          "path": "$DESKTOP/*"
        },
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOWNLOAD/*"
        }
      ]
    },
    "store:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "transcription-server-mac",
          "cmd": "resources/Transcription-Server/transcription-server"
        },
        {
          "name": "transcription-server-win",
          "cmd": "resources\\Transcription-Server\\transcription-server.exe"
        }
      ]
    },
    {
      "identifier": "shell:allow-kill"
    },
    "core:window:default",
    {
      "identifier": "core:window:allow-close"
    },
    "process:default",
    "shell:default",
    "os:default"
  ]
}